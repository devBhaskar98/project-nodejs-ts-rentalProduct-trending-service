{
    "compilerOptions": {
        "baseUrl": "./src", // Ensure this points to the root of your source files
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["jest"],
        "moduleResolution": "Node16",
        "module": "Node16",
        "paths": {
            "@trendingService/controllers": ["controllers/index"],
            "@trendingService/middleware": ["middleware/index"],
            "@trendingService/repository": ["repositories/index"]
        }
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
