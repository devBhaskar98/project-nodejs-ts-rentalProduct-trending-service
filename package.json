{
    "name": "api-with-decorators",
    "version": "24.1.1",
    "description": "This project is a demonstration on how to route express controllers using Typescript decorators.",
    "main": "src/server.ts",
    "scripts": {
        "build": "tsc",
        "start": "nodemon -r tsconfig-paths/register src/server.ts",
        "start-prod": "set NODE_ENV=production && nodemon -r tsconfig-paths/register src/server",
        "test": "jest --config jest.config.ts --detectOpenHandles --coverage --maxWorkers=1"
    },
    "keywords": [
        "decorators",
        "typescript",
        "express",
        "routing"
    ],
    "author": "Saman Arif",
    "license": "MIT",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.16.7",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "dotenv": "^16.4.4",
        "express": "^4.18.2",
        "nodemon": "^3.1.7",
        "pg": "^8.13.0",
        "reflect-metadata": "^0.2.1"
    },
    "engines": {
        "node": "18.17.0"
    }
}
